{
  "version": 2,
  "framework": null,
  "builds": [
    {
      "src": "public/*/*.php",
      "use": "vercel-php@0.6.0"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*\\.php)",
      "dest": "/public/$1",
      "headers": {
        "Content-Type": "text/html"
      }
    }
  ],
  "outputDirectory": "public"
}